        // om lyckas, visa meddelande
        // om misslyckas, visa meddelande
    }

    public class ChangePasswordForm
    {
        [Required]
        [MinLength(6)]
        public string? OldPassword { get; set; }
        [Required]
        [MinLength(6)]
        public string? NewPassword { get; set; }
    }
}
