<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a id="page-name"class="navbar-brand" href="">ChatJaffApp</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink data-testid="about-link" class="nav-link" href="contactinfo">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Contact & Info
            </NavLink>
        </div>
        <AuthorizeView Roles="Admin">
            <div class="nav-item px-3">
                <NavLink data-cy="dashboard-link" class="nav-link" href="dashboard">
                    <span class="material-symbols:lock-person" aria-hidden="true"></span> Dashboard
                </NavLink>
            </div>
        </AuthorizeView>
        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink data-testid="profile-link" class="nav-link" href="profile">
                        <span class="oi oi-person" aria-hidden="true"></span> Profile
                    </NavLink>
                </div>
                
                <div class="nav-item px-3">
                    <NavLink data-testid="chatrooms-link"  class="nav-link" href="chatrooms">
                        <span class="oi oi-chat" aria-hidden="true"></span> Chat Rooms
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink data-testid="logout-link" class="nav-link" href="account/logout">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Logout
                    </NavLink>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink data-testid="login-link" class="nav-link" href="account/login">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Login
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>


    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
